<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ipp.isep.dei.esoft.project.ui.console.menu.HRmUI">
   <children>
      <GridPane layoutX="144.0" layoutY="80.0" prefHeight="169.0" prefWidth="313.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button fx:id="btnRegisterSkill" mnemonicParsing="false" onAction="#handleRegisterSkill" text="Register Skill" />
            <Button fx:id="btnViewAllSkills" mnemonicParsing="false" onAction="#handleViewAllSkills" text="View All Skills" GridPane.columnIndex="1" />
            <Button fx:id="btnRegisterAJob" mnemonicParsing="false" onAction="#handleRegisterAJob" text="Register a job" GridPane.rowIndex="1" />
            <Button fx:id="btnRegisterACollaborator" mnemonicParsing="false" onAction="#handleRegisterACollaborator" text="Register a collaborator" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Button fx:id="btnAssignSkillsToCollaborator" mnemonicParsing="false" onAction="#handleAssignSkillsToCollaborator" text="Assign skills to collaborator" GridPane.rowIndex="2" />
            <Button fx:id="btnGenerateTeam" mnemonicParsing="false" onAction="#handleGenerateTeam" text="Generate a team" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         </children>
      </GridPane>
      <Button fx:id="btnExit" layoutX="275.0" layoutY="295.0" mnemonicParsing="false" onAction="#HandleExit" text="Exit" />
   </children>
</AnchorPane>
